{
  "compilerOptions": {
    "target": "es6",
    "module": "es6", // module handling is handled by WebPack
    "jsx": "react", // could be handled by Babel, but preserve throws an error
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "preserveConstEnums": true
  },
  "files": [
    "./typings/index.d.ts",
    "./typings/app.d.ts",

    "./src/app.tsx",
    "./src/components/footer.tsx",
    "./src/components/header.tsx",
    "./src/components/main-layout.tsx",
    "./src/components/recipes/DisplayTable.tsx",
    "./src/components/recipes/SearchBox.tsx",
    "./src/components/recipes/RecipesContainer.tsx",
    "./src/modules/http.ts",
    "./src/modules/text.ts"
  ]
}